#!/etc/init/stanbol.conf
description	"Apache Stanbol"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

umask 022
expect daemon
respawn

pre-start script
    test -d /opt/stanbol || { stop; exit 0; }
end script

chdir /opt/stanbol

# Note the use of a wrapper so we can activate our virtualenv:
exec start-stop-daemon --oknodo --chdir /opt/stanbol --user root --chuid root --pidfile /opt/stanbol/stanbol.pid --name stanbol --startas /opt/stanbol/bin/run-stanbol-server.sh --start start